@import "global.rasi"

mainbox {
    children: [listview]; 
    padding: 25% 0%; 
}

listview {
    padding: 0px 10px; 
    spacing: 10px; 
    columns: 7; 
    flow: horizontal; 
    children: [element-icon]; 
}

element {
    border-radius: 10px; /* Уникальное скругление для превью */ 
}

element.selected {
    border: 2px; 
    border-color: white; 
}

element-icon {
    size: 229px 540px; 
    horizontal-align: 0; 
}
